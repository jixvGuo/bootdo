<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.cpe.petroleum_engineering_award.dao.OilProUnitOpinionDao">

	<select id="get" resultType="com.bootdo.cpe.petroleum_engineering_award.domain.OilProUnitOpinionDO">
		select `id`,`construction_opinions`,`design_unit_opinions`,`supervision_opinions`,`pro_id`,`task_id`,`apply_id`,`opt_uid`,`created`,`updated` from ass_oil_pro_unit_opinion where id = #{value}
	</select>

	<select id="getByProId" resultType="com.bootdo.cpe.petroleum_engineering_award.domain.OilProUnitOpinionDO">
    	select `id`,`construction_opinions`,`design_unit_opinions`,`supervision_opinions`,`pro_id`,`task_id`,`apply_id`,`opt_uid`,`created`,`updated`
    	 from ass_oil_pro_unit_opinion where pro_id = #{value} order by id desc limit 1
	</select>

	<select id="list" resultType="com.bootdo.cpe.petroleum_engineering_award.domain.OilProUnitOpinionDO">
		select `id`,`construction_opinions`,`design_unit_opinions`,`supervision_opinions`,`pro_id`,`task_id`,`apply_id`,`opt_uid`,`created`,`updated` from ass_oil_pro_unit_opinion
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="constructionOpinions != null and constructionOpinions != ''"> and construction_opinions = #{constructionOpinions} </if>
		  		  <if test="designUnitOpinions != null and designUnitOpinions != ''"> and design_unit_opinions = #{designUnitOpinions} </if>
		  		  <if test="supervisionOpinions != null and supervisionOpinions != ''"> and supervision_opinions = #{supervisionOpinions} </if>
		  		  <if test="proId != null and proId != ''"> and pro_id = #{proId} </if>
		  		  <if test="taskId != null and taskId != ''"> and task_id = #{taskId} </if>
		  		  <if test="optUid != null and optUid != ''"> and opt_uid = #{optUid} </if>
		  		  <if test="created != null and created != ''"> and created = #{created} </if>
		  		  <if test="updated != null and updated != ''"> and updated = #{updated} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id asc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from ass_oil_pro_unit_opinion
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="constructionOpinions != null and constructionOpinions != ''"> and construction_opinions = #{constructionOpinions} </if>
		  		  <if test="designUnitOpinions != null and designUnitOpinions != ''"> and design_unit_opinions = #{designUnitOpinions} </if>
		  		  <if test="supervisionOpinions != null and supervisionOpinions != ''"> and supervision_opinions = #{supervisionOpinions} </if>
		  		  <if test="proId != null and proId != ''"> and pro_id = #{proId} </if>
		  		  <if test="taskId != null and taskId != ''"> and task_id = #{taskId} </if>
		  		  <if test="optUid != null and optUid != ''"> and opt_uid = #{optUid} </if>
		  		  <if test="created != null and created != ''"> and created = #{created} </if>
		  		  <if test="updated != null and updated != ''"> and updated = #{updated} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.cpe.petroleum_engineering_award.domain.OilProUnitOpinionDO">
		insert into ass_oil_pro_unit_opinion
		(
			`construction_opinions`,
			`design_unit_opinions`, 
			`supervision_opinions`, 
			`pro_id`, 
			`task_id`, 
			`apply_id`, 
			`opt_uid`, 
			`created`, 
			`updated`
		)
		values
		(
			#{constructionOpinions},
			#{designUnitOpinions}, 
			#{supervisionOpinions}, 
			#{proId}, 
			#{taskId}, 
			#{applyId}, 
			#{optUid}, 
			now(),
			#{updated}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.cpe.petroleum_engineering_award.domain.OilProUnitOpinionDO">
		update ass_oil_pro_unit_opinion 
		<set>
			<if test="constructionOpinions != null">`construction_opinions` = #{constructionOpinions}, </if>
			<if test="designUnitOpinions != null">`design_unit_opinions` = #{designUnitOpinions}, </if>
			<if test="supervisionOpinions != null">`supervision_opinions` = #{supervisionOpinions}, </if>
			<if test="proId != null">`pro_id` = #{proId}, </if>
			<if test="taskId != null">`task_id` = #{taskId}, </if>
			<if test="applyId != null">`apply_id` = #{applyId}, </if>
			<if test="optUid != null">`opt_uid` = #{optUid}, </if>
			<if test="created != null">`created` = #{created}, </if>
			<if test="updated != null">`updated` = #{updated}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from ass_oil_pro_unit_opinion where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from ass_oil_pro_unit_opinion where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>