<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.system.dao.AwardMajorDao">

	<select id="get" resultType="com.bootdo.system.domain.AwardMajorDo">
		select `id`, `award_id`, `major_dict_id`, `created` from
		ass_award_major_ship where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.system.domain.UserRoleDO">
		select `id`, `award_id`, `major_dict_id`, `created` from ass_award_major_ship
		<where>
			<if test="id != null and id != ''"> and id = #{id} </if>
			<if test="awardId != null and awardId != ''"> and award_id = #{awardId} </if>
			<if test="majorDictId != null and majorDictId != ''"> and major_dict_id = #{majorDictId} </if>
		</where>
		<choose>
			<when test="sort != null and sort.trim() != ''">
				order by ${sort} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="count" resultType="int">
		select count(*) from ass_award_major_ship
		<where>
			<if test="id != null and id != ''"> and id = #{id} </if>
			<if test="awardId != null and awardId != ''"> and award_id = #{awardId} </if>
			<if test="majorDictId != null and majorDictId != ''"> and major_dict_id = #{majorDictId} </if>
		</where>
	</select>

	<insert id="save" parameterType="com.bootdo.system.domain.AwardMajorDo"
		useGeneratedKeys="true" keyProperty="id">
		insert into ass_award_major_ship
		(
		`award_id`,
		`major_dict_id`
		)
		values
		(
		#{awardId},
		#{majorDictId}
		)
	</insert>

	<update id="update" parameterType="com.bootdo.system.domain.AwardMajorDo">
		update ass_award_major_ship
		<set>
			<if test="awardId != null">`award_id` = #{awardId}, </if>
			<if test="majorDictId != null">`major_dict_id` = #{majorDictId}</if>
		</set>
		where id = #{id}
	</update>

	<delete id="remove">
		delete from ass_award_major_ship where id = #{value}
	</delete>

	<delete id="batchRemove">
		delete from ass_award_major_ship where id in
		<foreach item="id" collection="array" open="(" separator=","
			close=")">
			#{id}
		</foreach>
	</delete>

	<select id="listMajorIdByAwardId" resultType="long">
		select major_dict_id from
		ass_award_major_ship where
		`award_id` = #{awardId}
	</select>

	<delete id="removeByAwardId">
		delete from ass_award_major_ship where award_id=#{awardId}
	</delete>

	<delete id="removeByMajorId">
		delete from ass_award_major_ship where `major_dict_id` = #{majorDictId}
	</delete>

	<delete id="batchRemoveByAwardId">
		delete from ass_award_major_ship where major_dict_id in
		<foreach item="id" collection="array" open="(" separator=","
			close=")">
			#{id}
		</foreach>
	</delete>

	<insert id="batchSave">
		INSERT INTO ass_award_major_ship(award_id, major_dict_id) values
		<foreach item="item" index="index" collection="list"
			separator=",">
			(#{item.awardId},#{item.majorDictId})
		</foreach>
	</insert>
</mapper>