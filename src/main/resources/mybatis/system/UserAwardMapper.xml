<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.system.dao.UserAwardDao">

	<select id="get" resultType="com.bootdo.system.domain.UserAwardDO">
		select `id`,`user_id`,`award_id` from
		ass_award_user_ship where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.system.domain.UserAwardDO">
		select `id`,`user_id`,`award_id` from ass_award_user_ship
		<where>
			<if test="id != null and id != ''"> and id = #{id} </if>
			<if test="userId != null and userId != ''"> and user_id = #{userId} </if>
			<if test="awardId != null and awardId != ''"> and award_id = #{awardId} </if>
		</where>
		<choose>
			<when test="sort != null and sort.trim() != ''">
				order by ${sort} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="count" resultType="int">
		select count(*) from ass_award_user_ship
		<where>
			<if test="id != null and id != ''"> and id = #{id} </if>
			<if test="userId != null and userId != ''"> and user_id = #{userId} </if>
			<if test="awardId != null and awardId != ''"> and award_id = #{awardId} </if>
		</where>
	</select>

	<insert id="save" parameterType="com.bootdo.system.domain.UserAwardDO"
		useGeneratedKeys="true" keyProperty="id">
		insert into ass_award_user_ship
		(
		`user_id`,
		`award_id`
		)
		values
		(
		#{userId},
		#{awardId}
		)
	</insert>

	<update id="update" parameterType="com.bootdo.system.domain.UserAwardDO">
		update ass_award_user_ship
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="awardId != null">`award_id` = #{awardId}</if>
		</set>
		where id = #{id}
	</update>

	<delete id="remove">
		delete from ass_award_user_ship where id = #{value}
	</delete>

	<delete id="batchRemove">
		delete from ass_award_user_ship where id in
		<foreach item="id" collection="array" open="(" separator=","
			close=")">
			#{id}
		</foreach>
	</delete>

	<select id="listAwardId" resultType="long">
		select award_id from
		ass_award_user_ship where
		user_id=#{userId}
	</select>

	<delete id="removeByUserId">
		delete from ass_award_user_ship where user_id=#{userId}
	</delete>

	<delete id="removeByAwardId">
		delete from ass_award_user_ship where award_id=#{awardId}
	</delete>

	<delete id="batchRemoveByUserId">
		delete from ass_award_user_ship where user_id in
		<foreach item="id" collection="array" open="(" separator=","
			close=")">
			#{id}
		</foreach>
	</delete>

	<insert id="batchSave">
		INSERT INTO ass_award_user_ship(user_id, award_id) values
		<foreach item="item" index="index" collection="list"
			separator=",">
			(#{item.userId},#{item.awardId})
		</foreach>
	</insert>
</mapper>