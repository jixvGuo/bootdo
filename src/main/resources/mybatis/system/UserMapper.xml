<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.system.dao.UserDao">

    <select id="get" resultType="com.bootdo.system.domain.UserDO">
		select `user_id`,`username`,`name`,`password`,`dept_id`,`email`,`mobile`,`status`,`user_id_create`,`gmt_create`,`gmt_modified`,`sex`,`birth`,`pic_id`,`live_address`,`hobby`,`province`,`city`,`district` from sys_user where user_id = #{value}
	</select>

    <select id="list" resultType="com.bootdo.system.domain.UserDO">
        select
        su.`user_id`,`username`,`name`,`password`,`dept_id`,`email`,`mobile`,`status`,`user_id_create`,`gmt_create`,`gmt_modified`,`sex`,`birth`,`pic_id`,`live_address`,`hobby`,`province`,`city`,`district`,
        (SELECT passwd FROM boot_do.ass_enterprise_account_record where uid = su.user_id limit 1) initPwd,
        (SELECT group_concat(role_id) FROM boot_do.sys_user_role where user_id = su.user_id) userRoleIdsStr
        from sys_user su
        <if test="roleId != null and roleId != ''">
         join sys_user_role sur on su.user_id = sur.user_id
        </if>
        <if test="taskId != null and taskId != ''">
            join add_special_info asi on su.user_id = asi.user_id and asi.task_id = #{taskId} and asi.deleted = 0
        </if>
        <where>
            su.`user_id` > 0
            <if test="userId != null and userId != ''">and su.user_id = #{userId}</if>
            <if test="username != null and username != ''">and username = #{username}</if>
            <if test="name != null and name != ''">and (name like #{name} or username like #{name}) </if>
            <if test="password != null and password != ''">and password = #{password}</if>
            <if test="deptId != null and deptId != ''">and dept_id = #{deptId}</if>
            <if test="roleId != null and roleId != ''">and sur.role_id = #{roleId}</if>
            <if test="deptIds != null and deptIds.size() > 0">and dept_id in
                <foreach collection="deptIds" item="item" index="index" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>
            <if test="email != null and email != ''">and email = #{email}</if>
            <if test="mobile != null and mobile != ''">and mobile = #{mobile}</if>
            <if test="status != null and status != ''">and status = #{status}</if>
            <if test="userIdCreate != null and userIdCreate != ''">and user_id_create = #{userIdCreate}</if>
            <if test="gmtCreate != null and gmtCreate != ''">and gmt_create = #{gmtCreate}</if>
            <if test="gmtModified != null and gmtModified != ''">and gmt_modified = #{gmtModified}</if>
            <if test="sex != null and sex != ''">and sex = #{sex}</if>
            <if test="birth != null and birth != ''">and birth = #{birth}</if>
            <if test="picId != null and picId != ''">and pic_id = #{picId}</if>
            <if test="liveAddress != null and liveAddress != ''">and live_address = #{liveAddress}</if>
            <if test="hobby != null and hobby != ''">and hobby = #{hobby}</if>
            <if test="province != null and province != ''">and province = #{province}</if>
            <if test="city != null and city != ''">and city = #{city}</if>
            <if test="district != null and district != ''">and district = #{district}</if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by user_id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="getUidsByNames" resultType="java.lang.Long">
        select user_id from sys_user where `name` in
        <foreach item="name" collection="userNames" open="(" separator=","
                 close=")">
            #{name}
        </foreach>
    </select>

    <select id="getUidsByLoginUserNames" resultType="Long">
        select user_id from sys_user where `username` in
        <foreach item="name" collection="userNames" open="(" separator=","
                 close=")">
            #{name}
        </foreach>
    </select>

    <select id="getUidByLoginUserName" resultType="java.lang.Long">
        select user_id from sys_user where username = #{username}
    </select>

    <select id="count" resultType="int">
        select count(*) from sys_user su
        <if test="roleId != null and roleId != ''">
         join sys_user_role sur on su.user_id = sur.user_id
        </if>
        <where>
            <if test="userId != null and userId != ''">and user_id = #{userId}</if>
            <if test="username != null and username != ''">and username = #{username}</if>
            <if test="name != null and name != ''">and name like #{name}</if>
            <if test="password != null and password != ''">and password = #{password}</if>
            <if test="deptId != null and deptId != ''">and dept_id = #{deptId}</if>
            <if test="roleId != null and roleId != ''">and sur.role_id = #{roleId}</if>
            <if test="deptIds != null and deptIds.size() > 0">and dept_id in
                <foreach collection="deptIds" item="item" index="index" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>
            <if test="email != null and email != ''">and email = #{email}</if>
            <if test="mobile != null and mobile != ''">and mobile = #{mobile}</if>
            <if test="status != null and status != ''">and status = #{status}</if>
            <if test="userIdCreate != null and userIdCreate != ''">and user_id_create = #{userIdCreate}</if>
            <if test="gmtCreate != null and gmtCreate != ''">and gmt_create = #{gmtCreate}</if>
            <if test="gmtModified != null and gmtModified != ''">and gmt_modified = #{gmtModified}</if>
            <if test="sex != null and sex != ''">and sex = #{sex}</if>
            <if test="birth != null and birth != ''">and birth = #{birth}</if>
            <if test="picId != null and picId != ''">and pic_id = #{picId}</if>
            <if test="liveAddress != null and liveAddress != ''">and live_address = #{liveAddress}</if>
            <if test="hobby != null and hobby != ''">and hobby = #{hobby}</if>
            <if test="province != null and province != ''">and province = #{province}</if>
            <if test="city != null and city != ''">and city = #{city}</if>
            <if test="district != null and district != ''">and district = #{district}</if>
        </where>
    </select>

    <insert id="save" parameterType="com.bootdo.system.domain.UserDO" useGeneratedKeys="true" keyProperty="userId">
		insert into sys_user
		(
			`username`,
			`name`,
			`password`,
			`dept_id`,
			`email`,
			`mobile`,
			`status`,
			`user_id_create`,
			`gmt_create`,
			`gmt_modified`,
			`sex`,
			`birth`,
			`pic_id`,
			`live_address`,
			`hobby`,
			`province`,
			`city`,
			`district`,
			`company_name`,
			`bank_card`

		)
		values
		(
			#{username},
			#{name},
			#{password},
			#{deptId},
			#{email},
			#{mobile},
			#{status},
			#{userIdCreate},
			#{gmtCreate},
			#{gmtModified},
			#{sex},
			#{birth},
			#{picId},
			#{liveAddress},
			#{hobby},
			#{province},
			#{city},
			#{district},
			#{companyName},
			#{bankCard}


		)
	</insert>

    <insert id="saveEnterpriseInitPwdData" parameterType="com.bootdo.cpe.domain.EnterpriseAccountInitPwdData" >
        INSERT INTO `ass_enterprise_account_record`
        (`uid`,
         `passwd`)
        VALUES
            (#{uid},#{pwd})
    </insert>

    <update id="update" parameterType="com.bootdo.system.domain.UserDO">
        update sys_user
        <set>
            <if test="username != null">`username` = #{username},</if>
            <if test="name != null">`name` = #{name},</if>
            <if test="password != null">`password` = #{password},</if>
            <if test="deptId != null">`dept_id` = #{deptId},</if>
            <if test="email != null">`email` = #{email},</if>
            <if test="mobile != null">`mobile` = #{mobile},</if>
            <if test="status != null">`status` = #{status},</if>
            <if test="userIdCreate != null">`user_id_create` = #{userIdCreate},</if>
            <if test="gmtCreate != null">`gmt_create` = #{gmtCreate},</if>
            <if test="gmtModified != null">`gmt_modified` = #{gmtModified},</if>
            <if test="sex != null">`sex` = #{sex},</if>
            <if test="birth != null">`birth` = #{birth},</if>
            <if test="picId != null">`pic_id` = #{picId},</if>
            <if test="liveAddress != null">`live_address` = #{liveAddress},</if>
            <if test="hobby != null">`hobby` = #{hobby},</if>
            <if test="province != null">`province` = #{province},</if>
            <if test="city != null">`city` = #{city},</if>
            <if test="district != null">`district` = #{district}</if>
        </set>
        where user_id = #{userId}
    </update>

    <delete id="remove">
		delete from sys_user where user_id = #{value}
	</delete>
    <delete id="removeByLoginAccount">
        delete from sys_user where username = #{value}
    </delete>

    <update id="delUserByAccount">
        update sys_user set deleted = 1 where username = #{value}
    </update>

    <delete id="batchRemove">
        delete from sys_user where user_id in
        <foreach item="userId" collection="array" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>

    <select id="listAllDept" resultType="long">
				select DISTINCT dept_id from sys_user
	</select>

    <select id="getIsRegCompany" parameterType="String" resultType="int">
        select count(1) from `boot_do`.`sys_dept` where name = #{companyName}
    </select>
    <insert id="registerCompanyInfo" parameterType="com.bootdo.system.vo.CompanyInfoVO" useGeneratedKeys="true" keyProperty="deptId" keyColumn="dept_id">
         INSERT INTO `boot_do`.`sys_dept`
         (`name`,
         `register_addr`,
         `address`,
         `company_register_money`,
         `company_main_opt`,
         `company_master`,
         `contacts`,
         `con_phone`,
         `real_promise`,
          email)
         VALUES
         (#{company_name},
          #{company_register_addr},
          #{company_receive_addr},
          #{company_register_money},
          #{company_main_opt},
          #{company_master},
          #{company_concat_user},
          #{company_concat_phone},
          #{real_promise},
          #{company_concat_email})
    </insert>
</mapper>
