<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.cpe.dao.SysSequenceMapper">

    <resultMap id="BaseResultMap" type="com.bootdo.cpe.domain.SysSequence">
        <id column="id" property="id"/>
        <result column="prefix" property="prefix"/>
        <result column="year" property="year"/>
        <result column="current_val" property="currentVal"/>
        <result column="create_by" property="createBy"/>
        <result column="create_date" property="createDate"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_date" property="updateDate"/>
        <result column="remarks" property="remarks"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <!-- 查询并加行锁 -->
    <select id="selectForUpdate" resultMap="BaseResultMap">
        SELECT * FROM sys_sequence
        WHERE prefix = #{prefix}
                  AND year = #{year}
          AND del_flag = '0'
            FOR UPDATE
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_sequence (
            prefix, year, current_val,
            create_by, create_date, del_flag
        ) VALUES (
                     #{prefix}, #{year}, #{currentVal},
                     #{createBy}, NOW(), '0'
                 )
    </insert>

    <update id="updateCurrentValue">
        UPDATE sys_sequence
        SET current_val = #{newVal},
            update_date = NOW()
        WHERE id = #{id}
    </update>

</mapper>